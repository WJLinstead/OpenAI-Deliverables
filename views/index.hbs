<div class="container">
  <div class="content-wrapper">
    <div class="left-section">
      <h1 class="title">{{title}}</h1>
      <p class="description">Enter your text below in any language, and we'll translate it into your desired language.</p>
      <form action="/ask" method="POST" class="translation-form">
        <div class="form-group">
          <label for="prompt" class="form-label">Enter your text:</label>
          <textarea id="prompt" name="prompt" class="form-input" rows="4" placeholder="Type your text here..."></textarea>
        </div>
        <div class="form-group">
          <label for="language" class="form-label">Select a language:</label>
          <div class="custom-select">
            <select id="language" name="language" class="form-select" onchange="checkCustomLanguage(this)">
              <option value="High_Valyrian_(Game_of_Thrones_language)">High Valyrian</option>
              <option value="Royal_English_(1800s_Kings_Fancy_English)">Royal English</option>
              <option value="Spanish">Spanish</option>
              <option value="Japanese_(Everyday_Japanese)">Everyday Japanese</option>
              <option value="Minion_(Language_spoken_by_Minions_in_Despicable_Me)">Minion</option>
              <option value="Pirate_(Pirate_Speak)">Pirate</option>
              <option value="Dothraki_(Language_spoken_by_Dothraki_in_Game_of_Thrones)">Dothraki</option>
              <option value="Elvish_(Language_spoken_by_Elves_in_Lord_of_the_Rings)">Elvish</option>
              <option value="Mermish_(Language_spoken_by_Mermaids_in_Harry_Potter)">Mermish</option>
              <option value="UK_English_(English_with_loads_of_UK_slangs)">UK English</option>
              <option value="other">Other</option> <!-- Added "Other" option -->
            </select>
          </div>
          <input type="text" id="customLanguageInput" name="customLanguage" class="form-input" style="display: none;" placeholder="Enter custom language name">
        </div>
        <button type="submit" class="btn btn-primary">Translate</button>
      </form>
    </div>
    <div class="right-section">
      {{#if translation}}
      <h2 class="translation-title">Translation:</h2>
      <div class="translation-box">
        <p class="translation-text">{{ translation }}</p>
      </div>
      {{/if}}
    </div>
  </div>
</div>

<script>
  function checkCustomLanguage(select) {
    var customLanguageInput = document.getElementById("customLanguageInput");
    if (select.value === "other") {
      customLanguageInput.style.display = "block";
    } else {
      customLanguageInput.style.display = "none";
    }
  }
</script>
